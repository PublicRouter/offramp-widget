{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "types": ["react", "react-dom"],
    "target": "ESNext",
    "moduleResolution": "node",
    "module": "ESNext",
    "lib": ["dom", "esnext"],
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*", "package.json"],
  "exclude": ["node_modules", "dist"]
}
